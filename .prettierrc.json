{
  "singleQuote": true,
  "trailingComma": "all",
  "overrides": [
    {
      "files": "**/*.svx",
      "options": {
        "parser": "markdown"
      }
    },
    {
      "files": "**/*.ts",
      "options": {
        "parser": "typescript"
      }
    },
    {
      "files": "**/CHANGELOG.md",
      "options": {
        "requirePragma": true
      }
    }
  ]
}
